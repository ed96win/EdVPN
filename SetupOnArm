apt update -y
apt upgrade -y
apt install libtool autoconf libnl-genl-3-dev pkg-config libcap-ng-dev libssl-dev liblz4-dev liblzo2-dev libpam0g-dev libtool-bin build-essential -y
wget https://swupdate.openvpn.org/community/releases/openvpn-2.6.6.tar.gz
tar -xvf openvpn-2.6.6.tar.gz
cd openvpn-2.6.6
autoreconf -vi
./configure
make -j2
make install
openvpn --version
cd ~
rm -f openvpn-2.6.6.tar.gz
rm -rf openvpn-2.6.6
sudo sh -c 'echo "[Unit]
Description=OpenVPN service
After=network.target

[Service]
Type=simple
User=root
Group=root
WorkingDirectory=/etc/openvpn
ExecStart=/usr/local/sbin/openvpn --config /etc/openvpn/server.conf
Restart=always

[Install]
WantedBy=multi-user.target" > /etc/systemd/system/openvpn.service'
sudo systemctl daemon-reload
git clone https://github.com/HouQiming/udp2raw.git
mv udp2raw folder
cd folder
make
mv udp2raw /usr/bin
rm -rf /root/folder
