apt update -y
apt upgrade -y
apt install libtool autoconf libnl-genl-3-dev pkg-config libcap-ng-dev libssl-dev liblz4-dev liblzo2-dev libpam0g-dev libtool-bin build-essential -y
wget https://swupdate.openvpn.org/community/releases/openvpn-2.6.10.tar.gz
tar -xvf openvpn-2.6.10.tar.gz
cd openvpn-2.6.10
autoreconf -vi
./configure
make -j2
make install
openvpn --version
cd ~
rm -f openvpn-2.6.10.tar.gz
rm -rf openvpn-2.6.10
sudo sh -c 'echo "[Unit]
Description=OpenVPN service
After=network.target

[Service]
Type=simple
User=root
Group=root
WorkingDirectory=/etc/openvpn
ExecStart=/usr/local/sbin/openvpn --config /etc/openvpn/server.conf
Restart=always

[Install]
WantedBy=multi-user.target" > /etc/systemd/system/openvpn.service'
sudo systemctl daemon-reload
apt install mysql-client -y
cd ~
wget https://github.com/shoenig/bcrypt-tool/releases/download/v1.1.6/bcrypt-tool_1.1.6_linux_arm64.tar.gz
tar -xvf bcrypt-tool_1.1.6_linux_arm64.tar.gz
mv bcrypt-tool /usr/bin
git clone https://github.com/edthepurple/auth-script-openvpn.git
cd auth-script-openvpn
make
mv openvpn-plugin-auth-script.so /usr/local/lib/openvpn/plugins/
apt install apache2
systemctl enable apache2
systemctl enable openvpn
